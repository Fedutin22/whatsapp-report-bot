# Конфигурация сервера / Server Configuration
PORT=3000
NODE_ENV=development

# Учетные данные WhatsApp Cloud API / WhatsApp Cloud API Credentials
WHATSAPP_TOKEN=EAAG...your-permanent-access-token
PHONE_NUMBER_ID=123456789000000
VERIFY_TOKEN=your-webhook-verify-token-here

# Номера телефонов (формат E.164, только цифры, без '+') / Phone Numbers (E.164 format, digits only, no '+')
SENIOR_NUMBER=3712XXXXXXX
KID1=3712YYYYYYY
KID2=3712ZZZZZZZ

# Безопасность / Security
SEND_MENU_BEARER=generate-a-long-random-string-min-32-chars
ENABLE_WEBHOOK_SIGNATURE=false

# Ограничение частоты запросов / Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# Планировщик (опционально) / Scheduling (Optional)
# Включить автоматическую отправку меню каждый час / Enable automatic hourly menu sending
ENABLE_DAILY_SCHEDULE=false
DAILY_SEND_TIME=08:00
TIMEZONE=Europe/Riga

# Логирование / Logging
LOG_LEVEL=info
